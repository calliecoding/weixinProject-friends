/* miniprogram/pages/user/user.wxss */


.user{
  padding: 0 20rpx;
}

/* 头像信息 */
.user-infor{
  display: flex;
  align-items: center;
  height: 150rpx;
  border-bottom:4rpx solid #ccc
}
.user-infor image{
  margin-right:40rpx;
  height: 100rpx;
  width:100rpx;
  border-radius: 50%;
}


/* 列表 */
.user-list{
margin-top: 40rpx;
}
.user-list-item{
  height:100rpx;
  border-bottom:4rpx dashed #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
